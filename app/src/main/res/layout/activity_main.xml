<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    tools:context="com.buyk.crocompany.buyk_android.MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/myPageButton">

            <TextView
                android:id="@+id/textView"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="48dp"
                android:lineSpacingExtra="13.5sp"
                android:text="어떤\n바이크를\n찾으세요?"
                android:textColor="#0f0f0f"
                android:textSize="27dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageButton
                android:id="@+id/myPageButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="23dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="17dp"
                android:background="#00000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_user" />

            <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="61dp"
                android:layout_marginEnd="23dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/small_radius"
                android:onClick="gotoSoldBike"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button">


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="13dp"
                    android:text="바이크 내놓기"
                    android:textColor="#0f0f0f"
                    android:textSize="16dp"
                    android:typeface="sans"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="쉽고 간편하게 거래하세요"
                    android:textSize="10.1sp"
                    app:layout_constraintEnd_toEndOf="@+id/textView2"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/textView2"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <Button
                    android:id="@+id/gotoSoldBike"
                    android:layout_width="54dp"
                    android:layout_height="27.5dp"
                    android:layout_marginEnd="17dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/midium_radius"
                    android:text="팔기"
                    android:textColor="#ffffff"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>


            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="62.5dp"
                android:layout_marginEnd="23dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/small_radius_blured"
                android:drawablePadding="20dp"
                android:drawableStart="@mipmap/ic_search"
                android:gravity="left|center_vertical"
                android:onClick="gotoIntegrateSearch"
                android:paddingLeft="25dp"
                android:textSize="13.5sp"
                android:text="BMW S1000RR"
                android:textColor="#4c0f0f0f"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.508"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="22dp"
                android:text="실시간 바이크"
                android:textColor="#0f0f0f"
                android:textSize="13.5dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/moreRealTimeList"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/zeemBikeRecylerView" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="22dp"
                android:text="찜한 바이크"
                android:textColor="#0f0f0f"
                android:textSize="13.5dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/moreLikedList"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/moreRealTimeList"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginEnd="36dp"
                android:text="더보기"
                android:textColor="@color/colorDarkGreen"
                android:textSize="10.1dp"
                android:clickable="true"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView4"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/moreLikedList"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginEnd="36dp"
                android:text="더보기"
                android:clickable="true"
                android:textColor="@color/colorDarkGreen"
                android:textSize="10.1dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
                app:layout_constraintEnd_toEndOf="parent" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="329dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/realTimeBikeRecylerview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:clipToPadding="false"
                android:paddingLeft="24dp"
                android:scrollbars="none"
                android:overScrollMode="never"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                tools:listitem="@layout/main_recyler_view_component">


            </android.support.v7.widget.RecyclerView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/zeemBikeRecylerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:clipToPadding="false"
                android:paddingLeft="24dp"
                android:scrollbars="none"
                android:overScrollMode="never"
                app:layout_constraintEnd_toEndOf="@+id/textView5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>

