<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/image_recycler_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content ">

    <ImageView
        android:id="@+id/bikeImageInRecycler"
        android:layout_width="93dp"
        android:layout_height="90dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/image_recycler_background"
        android:scaleType="fitXY"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:color/transparent" />

    <ImageButton
        android:id="@+id/removeImageBtn"
        android:layout_width="18dp "
        android:layout_height="18dp"
        android:layout_marginStart="91dp"
        android:adjustViewBounds="true"
        android:padding="2dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_delete_orange_2_x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/status"
        app:layout_constraintEnd_toEndOf="@+id/bikeImageInRecycler"
        app:layout_constraintStart_toStartOf="@+id/bikeImageInRecycler"
        app:layout_constraintTop_toTopOf="@+id/bikeImageInRecycler"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_plus_4_x" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bikeImageInRecycler"
        app:layout_constraintStart_toStartOf="@+id/bikeImageInRecycler" />

    <RelativeLayout
        android:id="@+id/whenSelectedAppear"
        android:layout_width="87dp"
        android:layout_height="20dp"
        android:layout_marginBottom="11dp"
        android:background="@color/colorOrange"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/statusWhenSelected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="10dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>