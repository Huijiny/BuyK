<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="#f4f4f4"
    tools:context="com.buyk.crocompany.buyk_android.OfferingList"
    tools:layout_editor_absoluteY="25dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:background="@drawable/offering_list_card_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/offeringImage"
            android:layout_width="311dp"
            android:layout_height="157dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:background="@drawable/offering_radius"
            android:scaleType="fitCenter"
            android:src="@drawable/bike_placeholder"
            app:layout_constraintBottom_toTopOf="@+id/offeringPrice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/offeringYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="19dp"
            android:text="서울 | 2017년식 | 30000km"
            android:textColor="#800f0f0f"
            android:textSize="13.5dp"
            android:typeface="sans"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/offeringPrice"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/offeringImage"
            app:layout_constraintTop_toBottomOf="@+id/offeringImage" />

        <TextView
            android:id="@+id/offeringPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="14dp"
            android:text="3,000만원"
            android:textColor="#b30f0f0f"
            android:textSize="20.25dp"
            android:typeface="sans"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/offeringImage"
            app:layout_constraintTop_toBottomOf="@+id/offeringImage" />

        <ToggleButton
            android:id="@+id/offeringZeemBtn"
            android:layout_width="19.2dp"
            android:layout_height="17dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/zeem_btn"
            android:text="ToggleButton"
            android:textOff=""
            android:textOn=""
            android:padding="1dp"
            app:layout_constraintEnd_toEndOf="@+id/offeringImage"
            app:layout_constraintTop_toTopOf="@+id/offeringImage" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
